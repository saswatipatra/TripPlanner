@model TripPlannerCreateViewModel
@using TripPlanner.ViewModels
@{
    Layout = "_Layout";
}

 <div class="container-fluid">   
<div  id="userDetails">
    <h2 id="userNameDisplay">@Model.Name</h2>
    <div id="userprofilesPhoto" style="background-image: url(@Model.Photo)"></div>
    <div class="card userCardStyleEdit">
        
        <div class="card bg-secondary userInformationCard">
            @using (Html.BeginForm("Edit", "UserProfiles", FormMethod.Post,new{ enctype="multipart/form-data"}))
            {
                @Html.HiddenFor(model => model.ApplicationUserId)
                @Html.HiddenFor(model => model.UserProfileId)
                <p for="Name" class="userInformationTitle">NAME</p>
                <p class="userInformationDisplay"><input name="Name" type="text" class="form-control" value="@Model.Name"></p>
                <p for="Gender" class="userInformationTitle">GENDER</p>
                <p class="userInformationDisplay"><input name="Gender" type="text" class="form-control" value="@Model.Gender"></p>
                <p class="userInformationTitle">AGE</p>
                <p class="userInformationDisplay"><input name="Age" type="text" class="form-control" value="@Model.Age"></p>
                <p class="userInformationTitle">LOCATION</p>
                <p class="userInformationDisplay"><input name="Location" type="text" class="form-control" value="@Model.Location"></p>

                <p for="Photo" class="userInformationTitle">PHOTO LINK</p>
                <p class="userInformationDisplay"><input name="Photo" type="file" class="form-control" value="@Model.Photo"></p>
<hr>
                <input type="submit" value="SAVE" class=" button-styling-solid"/>
                <a href="/userprofiles/"><button class="button-styling-solid">CANCEL</button></a>

 @Html.ValidationSummary()

 @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
}
            }

            
            
        </div>
    </div>
</div>
</div>
