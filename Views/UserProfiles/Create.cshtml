@model TripPlannerCreateViewModel
@using TripPlanner.ViewModels
@{
    Layout = "_Layout";
}

 <div class="container-fluid">   

        <div class="card bg-secondary userInformationCard">
            @using (Html.BeginForm("Create", "UserProfiles", FormMethod.Post,new{ enctype="multipart/form-data"}))
            {
                <input name="ApplicationId" type="hidden" value="@ViewBag.ApplicationId">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name)

                @Html.LabelFor(model => model.Gender)
                @Html.TextBoxFor(model => model.Gender)

                @Html.LabelFor(model => model.Age)
                @Html.TextBoxFor(model => model.Age)

                @Html.LabelFor(model => model.Photo)
                @Html.TextBoxFor(model => model.Photo, new { type = "file" })

                @Html.LabelFor(model => model.Location)
                @Html.TextBoxFor(model => model.Location)



                
<hr>
                <input type="submit" value="SAVE" class=" button-styling-solid"/>
                

 @Html.ValidationSummary()

 @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
}
            }

            
            
        </div>
    </div>
</div>
</div>
